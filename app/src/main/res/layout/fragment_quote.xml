<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.zver.bookofwisdom.QuoteActivity$PlaceholderFragment"
    android:background="@drawable/paper">


    <ImageView
        android:id="@+id/imageQuote"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp" />


    <TextView
        android:id="@+id/descriptionOfQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/imageQuote"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:paddingLeft="15dp"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/authorQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/descriptionOfQuote"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="authorQuote"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />


    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrow_left"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_left" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/share" />

        <ImageButton
            android:id="@+id/arrow_right"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />

    </LinearLayout>

</RelativeLayout>
